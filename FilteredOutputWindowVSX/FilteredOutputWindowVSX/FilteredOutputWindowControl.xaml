<UserControl x:Class="FilteredOutputWindowVSX.FilteredOutputWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500"
             Name="MyToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button MaxHeight="50" Name="StartListeningButton" Click="StartListeningButton_Click"  >
                        <!--<Image Source="Resources/starticon.png" ></Image>--> Start
                    </Button>
                    <Button MaxHeight="50"  Name="StopListeningButton" Visibility="Collapsed" Click="StopListeningButton_Click"  >
                        <!--<Image Source="Resources/stopicon.png" ></Image>--> Stop
                    </Button>
                    <Button   Name="CleanButton" Click="CleanButton_Click"  >
                        Clear
                    </Button>
                    <CheckBox IsChecked="True" Name="ScrollToEndCheck">Autoscroll</CheckBox>
                    <Separator/>
                    <Label>Tags Comma Separated</Label>
                    <TextBox TextChanged="tagsBox_TextChanged" 
                             Grid.Column="1" 
                             Name="tagsBox" 
                             HorizontalAlignment="Stretch" 
                             Width="200" 
                             VerticalContentAlignment="Center"/>
                </ToolBar>
            </ToolBarTray>
            <RichTextBox VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Name="outputBox">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="1"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </DockPanel>
    </Grid>
</UserControl>
